@model IEnumerable<Coursach.AspNetUserRoles>

@{
    ViewBag.Title = "Index";
}

<h2>Роли</h2>

<p>
    @Html.ActionLink("Расширить права", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Пользователь
        </th>
        <th>
            Роль
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetRoles.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.UserRoleId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.UserRoleId })
        </td>
    </tr>
}

</table>
