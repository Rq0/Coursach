@model IEnumerable<Coursach.Ingredient>

@{
    ViewBag.Title = "Index";
}

<h2>Ингредиенты</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Цена
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Удалить", "Delete", new {id = item.Id})
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Экспорт", "Export", "Ingridients", htmlAttributes: new { id = "generateLink" })
