@model IEnumerable<Coursach.EntranceComposition>

@{
    ViewBag.Title = "Index";
}

<h2>Состав поставки</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Количество
        </th>
        <th>
            Цена
        </th>
        <th>
            Поставка
        </th>
        <th>
            Ингредиент
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Entrance1.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredient1.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new {id = item.Id}) |
            @Html.ActionLink("Удалить", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
