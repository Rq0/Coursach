@using System.Web.UI.WebControls
@model IEnumerable<Coursach.Menu>

@{
    ViewBag.Title = "Меню";
}

<h2>Меню</h2>

<p>
    @Html.ActionLink("Создать меню", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Номер меню
            @*@Html.DisplayNameFor(model => model.Id)*@
        </th>
        <th>
            Дата
            @*@Html.DisplayNameFor(model => model.Date)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Id.ToString(), "ShowWhere", "MenuCompositions", routeValues: new { id = item.Id }, htmlAttributes: new { id = "showWhereLink" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Заполнить требования", "Create", "MenuRequirements", routeValues: new { id = item.Id }, htmlAttributes: new { id = "requirementsLink" }) |
            @Html.ActionLink("Сгенерировать меню", "Generate", "MenuCompositions", routeValues: new {id = item.Id }, htmlAttributes: new {id = "generateLink"}) |
            @Html.ActionLink("Изменить", "Edit", new {id = item.Id}) |
            @Html.ActionLink("Подробности", "Details", new {id = item.Id}) |
            @Html.ActionLink("Удалить", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
